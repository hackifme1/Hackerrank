#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int main()
{
    double c,p,q,s,t;
    int n,m;
    scanf("%lf%d%d",&c,&n,&m);
     p=(n*c)*0.01;
     q=(m*c)*0.01;
     s=p+q+c;
     m=(int)s;
     t=s-m;
     if(t>0.5)
     m=m+1;
     printf("%d",m);
     return 0;
}
